{
    "name": "high-five/craft-base",
    "version": "0.0.0",
    "description": "Easily create a barebones Craft CMS website project.",
    "authors": [
        {
            "name": "High Five",
            "email": "hello@high-five.dev",
            "homepage": "https://www.high-five.dev"
        },
        {
            "name": "Harm Putman",
            "email": "harm@high-five.dev",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "support@high-five.dev"
    },
    "type": "project",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "^8.1",
        "craftcms/cms": "4.4.14",
        "craftcms/redactor": "^3.0",
        "ether/seo": "^4.1",
        "nystudio107/craft-vite": "^4.0",
        "vlucas/phpdotenv": "^5.4.0"
    },
    "require-dev": {
        "craftcms/generator": "^1.3.0",
        "yiisoft/yii2-shell": "^2.0.3"
    },
    "autoload": {
        "psr-4": {
            "modules\\": "modules/"
        }
    },
    "config": {
        "allow-plugins": {
            "craftcms/plugin-installer": true,
            "yiisoft/yii2-composer": true
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix"
    }
}